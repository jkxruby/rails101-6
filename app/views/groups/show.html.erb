<div class="col-md-12">
  <div class="group">
    <%= link_to("Write a Post", new_group_post_path(@group), class: "btn btn-default pull-right") %>
    <% if current_user && current_user == @group.user %>
    <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h1><%= @group.title %></h1>
  <h3><p><%= @group.description %></p></h3>

<table class="table">
  <thead>
    <tr>
      <th>цЦЗчлахЖЕхо╣</th>
      <th>хПСшбишАЕЁЯШК</th>
      <th>хПСшбицЧ╢щЧ┤</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.content %></td>
      <td><%= post.user.email %></td>
      <td><%= post.created_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= will_paginate @posts %>
</div>

</div>
